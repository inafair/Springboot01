<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atguigu.spring01.mapper.NoticeMapper">

    <select id="selectAll" resultType="com.atguigu.spring01.entity.Notice">
        select * from `notice`
        <where>
            <if test="title != null and title != ''"> and title like concat('%',#{title},'%')</if>
        </where>
        order by id asc
    </select>
    <insert id="insert" >
        insert into `notice` (title,content,time,user_id)
        values (#{title},#{content},#{time},#{userId}
    </insert>

    <update id="updateById">
        update notice set title=#{title},content=#{content},time=#{time},user_id=#{userId}
                      where id=#{id}
    </update>
</mapper>

