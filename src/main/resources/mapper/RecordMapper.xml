<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atguigu.spring01.mapper.RecordMapper">

    <select id="selectAll" resultType="com.atguigu.spring01.entity.Record">
        select * from `record`
        <where>
            <if test="name != null and name != ''"> and name like concat('%',#{name},'%')</if>
        </where>
        order by id asc
    </select>
    <insert id="insert" >
        insert into `record` (user_id,record_id,status,reason,time)
        values (#{userId},#{recordId},#{status},#{reason},#{time})
    </insert>

    <update id="updateById">
        update record set user_id=#{userId},record_id=#{recordId},status=#{status},reason=#{reason},time=#{time}
                      where id=#{id}
    </update>
</mapper>

